<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout2">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="35dp"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FaceDetection"
    android:background="#FFA500"
    android:layout_gravity="center_horizontal|center_vertical"
    tools:showIn="@layout/activity_face_detection">

    <ImageView
        android:id="@+id/image_crown"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:id="@+id/image_face"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/detect_face_sample"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Detect Faces"
        android:background="@drawable/mybutton"
        android:id="@+id/detect_faces"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Crown"
        android:background="@drawable/mybutton"
        android:id="@+id/crown_btn"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mybutton"
        android:layout_marginBottom="10dp"
        android:text="Dog Face"
        android:id="@+id/dog_btn"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
